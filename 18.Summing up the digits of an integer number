#include <stdio.h>
int main() 
{
    int number, sum = 0;
    printf("Enter an integer number: ");
    scanf("%d", &number);  
    number = abs(number);
    while (number > 0) 
    {
        int digit = number % 10; 
        sum 
        number /= 10;            
    }
    printf("Sum of the digits: %d\n", sum);
    return 0;

}
